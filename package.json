{
  "name": "speedread",
  "private": true,
  "version": "0.1.0",
  "packageManager": "npm@11.7.0",
  "author": {
    "name": "cmf",
    "email": "cmf@local"
  },
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "typecheck": "npm run typecheck:web && npm run typecheck:electron",
    "typecheck:web": "tsc --noEmit -p tsconfig.json",
    "typecheck:electron": "tsc --noEmit -p tsconfig.electron.json",
    "build": "npm run typecheck && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest --coverage",
    "verify": "npm run lint && npm run test:run && npm run build",
    "electron:dev": "ELECTRON=true vite",
    "electron:build": "npm run typecheck:electron && ELECTRON=true vite build && electron-builder",
    "electron:preview": "electron dist-electron/main.js"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "epub": "^1.3.0",
    "jsdom": "^27.4.0",
    "pdf-parse": "^2.4.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/jsdom": "^27.0.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^4.0.18",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^4.0.17"
  }
}
